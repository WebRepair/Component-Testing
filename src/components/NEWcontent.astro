---
import data from 'src/data/showcase/data.json'

const ColoredHeadline = "INSIDE TEMPLATE"

const Headline = "So what's inside? ..."

const items = [ 

  {title: "Small Title 1",
  description: "text and stuff",},

  {title: "Small Title 2",
  description: "text and stuff",},

  {title: "Small Title 3",
  description: "text and stuff",}

]

---





<section class= 'pt-0 md:pt-0 bg-blue-50 dark:bg-slate-800 py-16 md:py-20'>


  <div class="max-w-xl sm:mx-auto lg:max-w-2xl">

    <h1 class=" text-blue-800 font-semibold text-lg md:text-2xl flex justify-center pt-10 "> {data.Components.title2}  </h1>
    <h2 class=" font-bold md:text-6xl text-3xl flex justify-center font-serif mt-2"> {data.Components.subtext2}  </h2>

  </div>
  
  

<div class=" grid grid-cols-12 ">

    <div class=" col-span-12 md:col-span-6 mx-auto p-4 mt-16">
        
          {
            items.map(({ title, description }) => (
              <h1 class=" text-lg md:text-2xl font-semibold flex justify-center md:justify-start pt-10 "> {data.titles.title1}  </h1>
          <h2 class=" text-lg md:text-2xl flex justify-center md:justify-start pt-1 "> {data.titles.title2}  </h2>
            ))
          }          

    </div>



    <div class=" hidden md:block col-span-0 md:col-span-6 mx-auto p-4 mt-16 ">
        
      <img src="/images/hero.png" alt="">

    </div>


</div>




</section>